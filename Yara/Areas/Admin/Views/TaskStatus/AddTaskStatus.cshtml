@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddTaskStatus;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box-content">
    <ul class="list-inline">
        <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddTaskStatus</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>

    </ul>
    <div class="row small-spacing">
        <div class="col-xs-6">
            <div class="box-content card white">
                <h4 class="box-title">@ResourceWeb.LBAddTaskStatus</h4>
                <!-- /.box-title -->
                <div class="card-content">
                    <form role="form" method="post" asp-controller="TaskStatus" asp-action="Save" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.TaskStatus.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.TaskStatus.IdTaskStatus" class="form-control">
                            <input type="hidden" asp-for="@Model.TaskStatus.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                        </div>
                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.TaskStatus.TaskStatus" for="exampleInputEmail1">@ResourceWeb.LbTaskStatus</label>
                                    <input asp-for="@Model.TaskStatus.TaskStatus" type="text" placeholder="@ResourceWeb.LbTaskStatus ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.TaskStatus.TaskStatus" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["TaskStatus"]</strong></span>
                                </div>

                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.TaskStatus.TaskStatusAr" for="exampleInputEmail1">@ResourceWeb.LbTaskStatusAr</label>
                                    <input asp-for="@Model.TaskStatus.TaskStatusAr" type="text" placeholder="@ResourceWeb.LbTaskStatusAr ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.TaskStatus.TaskStatusAr" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["TaskStatusAr"]</strong></span>
                                </div>
                                <!-- /.col-xs-3 -->
                                <!-- /.col-xs-4 -->
                                <!-- /.col-xs-5 -->
                            </div>


                            <!-- /.row -->
                        </div>
                        <div class="checkbox margin-bottom-20">
                            <div class="switch success"><input type="checkbox" asp-for="@Model.TaskStatus.Active" id="switch-2"><label for="switch-2">@ResourceWeb.LbActive</label></div>
                        </div>
                        <div class="checkbox margin-bottom-20">
                            <div class="switch success"><input type="checkbox" asp-for="@Model.TaskStatus.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                    </form>
                </div>
                <!-- /.card-content -->
            </div>
            <!-- /.box-content -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

