
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model ViewmMODeElMASTER
@inject UserManager<ApplicationUser> userManager
@inject SignInManager<ApplicationUser> signInManager

@{
    var user = await userManager.GetUserAsync(User);
    var roles = await userManager.GetRolesAsync(user);
    var userRole = roles.FirstOrDefault();
}
<link rel="stylesheet" href="~/css/home.css">

<div class="row small-spacing">
    <div class="col-xs-12">
        <div class="box-content">
            <div class="row">
                <div class="col-5 col-md-4 col-sm-6 col-xs-12">
                    <a asp-area="Admin" class="box-content-link" asp-controller="ProjectType" asp-action="MyProjectType" asp-route-userId="@user.Id">
                        <div class="icon-box">
                            <i class="fa fa-users"></i>
                            <h4>Project Type</h4>
                        </div>
                    </a>
                </div>
                <div class="col-5 col-md-4 col-sm-6 col-xs-12">
                    <a asp-area="Admin" class="box-content-link" asp-controller="TypesOfTask/" asp-action="MyTypesOfTask" asp-route-userId="@user.Id">
                        <div class="icon-box">
                            <i class="fa fa-star"></i>
                            <h4>Types Of Task</h4>
                        </div>
                    </a>
                </div>
                <div class="col-5 col-md-4 col-sm-6 col-xs-12">
                    <a asp-area="Admin" class="box-content-link" asp-controller="TaskStatus" asp-action="MyTaskStatus" asp-route-userId="@user.Id">
                        <div class="icon-box">
                            <i class="fa fa-user"></i>
                            <h4>Task Status</h4>
                        </div>
                    </a>
                </div>
        </div>
    </div>
</div>
