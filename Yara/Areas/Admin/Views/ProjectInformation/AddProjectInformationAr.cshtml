@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWebAr.LBAddProjectInformation;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminAr.cshtml";
}

<div class="box-content">
    <ul class="list-inline">
        <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWebAr.LBAddProjectInformation</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>

    </ul>
    <div class="row small-spacing">
        <div class="col-xs-6">
            <div class="box-content card white">
                <h4 class="box-title">@ResourceWebAr.LBAddProjectInformation</h4>
                <!-- /.box-title -->
                <div class="card-content">
                    <form role="form" method="post" asp-controller="ProjectInformation" asp-action="SaveAr" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.ProjectInformation.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.ProjectInformation.IdProjectInformation" class="form-control">
                            <input type="hidden" asp-for="@Model.ProjectInformation.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                        </div>


                        <div class="card-content">
                            <div class="row small-spacing">

                                <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                        <label asp-for="@Model.ProjectInformation.IdProjectType" for="exampleInputEmail1">@ResourceWebAr.LbDescriptionClint</label>
                                        <select id="merchant-select" class="form-control" asp-for="@Model.ProjectInformation.IdProjectType" asp-items="@(new SelectList(ViewBag.projectType, "IdProjectType", "ProjectTypesAr"))">
                                        </select>
                                        <span asp-validation-for="@Model.ProjectInformation.IdProjectType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.ProjectInformation.ProjectName" for="exampleInputEmail1">@ResourceWebAr.LbProjectNameEn</label>
                                    <input asp-for="@Model.ProjectInformation.ProjectName" type="text" placeholder="@ResourceWebAr.LbProjectNameEn ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.ProjectInformation.ProjectName" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["ProjectInformation"]</strong></span>
                                </div>

                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.ProjectInformation.ProjectNameAr" for="exampleInputEmail1">@ResourceWebAr.LbProjectNameAr</label>
                                    <input asp-for="@Model.ProjectInformation.ProjectNameAr" type="text" placeholder="@ResourceWebAr.LbProjectNameAr ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.ProjectInformation.ProjectNameAr" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["ProjectInformationAr"]</strong></span>
                                </div>
                                <!-- /.col-xs-3 -->
                                <!-- /.col-xs-4 -->
                                <!-- /.col-xs-5 -->
                            </div>


                            <!-- /.row -->
                        </div>
                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.ProjectInformation.ProjectDescription" for="exampleInputEmail1">@ResourceWebAr.LbProjectDescriptionEn</label>
                                    <textarea asp-for="@Model.ProjectInformation.ProjectDescription" type="text" placeholder="@ResourceWebAr.LbProjectDescriptionEn ...." class="form-control" maxlength="3000" rows="8"></textarea>
                                    <span asp-validation-for="@Model.ProjectInformation.ProjectDescription" class="text-danger"></span>
                                </div>

                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.ProjectInformation.ProjectDescriptionAr" for="exampleInputEmail1">@ResourceWebAr.LbProjectDescriptionAr</label>
                                    <textarea asp-for="@Model.ProjectInformation.ProjectDescriptionAr" type="text" placeholder="@ResourceWebAr.LbProjectDescriptionAr ...." class="form-control" maxlength="3000" rows="8"></textarea>
                                    <span asp-validation-for="@Model.ProjectInformation.ProjectDescriptionAr" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-6">
                                        <label asp-for="@Model.ProjectInformation.ProjectStart" for="exampleInputEmail1">@ResourceWebAr.LbProjectStart</label>
                                        <input asp-for="@Model.ProjectInformation.ProjectStart" type="date" placeholder="@ResourceWebAr.LbProjectStart ...." class="form-control">
                                        <span asp-validation-for="@Model.ProjectInformation.ProjectStart" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 col-sm-6">
                                        <label asp-for="@Model.ProjectInformation.ProjectEnd" for="exampleInputEmail1">@ResourceWebAr.LbProjectEnd</label>
                                        <input asp-for="@Model.ProjectInformation.ProjectEnd" type="date" placeholder="@ResourceWebAr.LbProjectEnd ...." class="form-control">
                                        <span asp-validation-for="@Model.ProjectInformation.ProjectEnd" class="text-danger"></span>
                                    </div>

                                </div>

                                <!-- /.row -->
                            </div>
                            <div class="checkbox margin-bottom-20">
                                <div class="switch success"><input type="checkbox" asp-for="@Model.ProjectInformation.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWebAr.lbCurrentState</label></div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWebAr.lbSave</button>
                    </form>
                </div>
                <!-- /.card-content -->
            </div>
            <!-- /.box-content -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}


